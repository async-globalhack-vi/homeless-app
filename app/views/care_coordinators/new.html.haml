%section
  %h2.underline New Assistance Provider
  = form_tag(action: 'create', method: 'post') do

    .input-group
      = label_tag :name, 'Name'
      = text_field_tag :name

    .input-group
      = label_tag :email, 'Email'
      = text_field_tag :email

    .input-group
      = label_tag :password, 'Password'
      = password_field_tag :password

    .actions
      %button{'ng-click' => 'submit()'} Submit

