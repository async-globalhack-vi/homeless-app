= form_tag(action: 'create', method: 'post') do 
  %fieldset
    %p
      = label_tag :name, 'Name'
      = text_field_tag :name

    %p
      = label_tag :email, 'Email'
      = text_field_tag :email

    %p
      = label_tag :password, 'Password'
      = password_field_tag :password

  = submit_tag 'Submit'

