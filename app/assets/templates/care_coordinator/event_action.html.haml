.ng-slide.slider{'ng-if' => 'takingAction'}
  .input-group
    %label{for: :event_type_field} Event type
    %input{'id' => 'event_type_field', 'ng-model' => 'triggerEvent.eventType'}

  .input-group
    %label{for: :date_of_event_field} Date of event
    %input{'id' => 'event_of_event_field', 'ng-model' => 'triggerEvent.date_of_event'}

  .input-group
    %label{for: :street_address_field} Street address
    %input{'id' => 'street_address_field', 'ng-model' => 'triggerEvent.street_address'}

  .input-group
    %label{for: :city_field} City
    %input{'id' => 'city_field', 'ng-model' => 'triggerEvent.city'}

  .input-group
    %label{for: :state_field} State
    %input{'id' => 'state_field', 'ng-model' => 'triggerEvent.state'}

  .input-group
    %label{for: :zip_field} Zip
    %input{'id' => 'zip_field', 'ng-model' => 'triggerEvent.zip'}

  .input-group
    %label{for: :notes_field} Notes
    %textarea{'id' => 'notes_field', 'ng-model' => 'triggerEvent.notes'}

  .actions
    %button{'ng-click' => 'cancelEventAction()'} Cancel
    %button{'ng-click' => 'update()'} Update
    %button{'ng-click' => 'eventResolved()'} Event Resolved
    %button{'ng-click' => 'createQualifiedNeed()'} Qualify Need
